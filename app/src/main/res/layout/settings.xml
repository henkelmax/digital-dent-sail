<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_weight="1"
            android:text="Stripe Count" />

        <TextView
            android:id="@+id/stripeCountText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_weight="1"/>

        <SeekBar
            android:id="@+id/stripeCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="200" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:textSize="24sp"
            android:layout_weight="1"
            android:text="Big Stripe Thickness" />

        <TextView
            android:id="@+id/stripeThicknessBigText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_weight="1"/>

        <SeekBar
            android:id="@+id/stripeThicknessBig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="100" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:textSize="24sp"
            android:layout_weight="1"
            android:text="Small Stripe Thickness" />

        <TextView
            android:id="@+id/stripeThicknessSmallText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_weight="1"/>

        <SeekBar
            android:id="@+id/stripeThicknessSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="100" />

        <Switch
            android:id="@+id/verticalStripes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="10dp"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:layout_weight="1"
            android:text="Vertical Stripes" />

        <Button
            android:id="@+id/colorButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:text="Color" />
    </LinearLayout>

</ScrollView>